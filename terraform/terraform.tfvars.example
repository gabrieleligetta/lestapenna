# --- Autenticazione OCI ---
tenancy_ocid        = "ocid1.tenancy.oc1..aaaaaaaxxxxxxxxx"
user_ocid           = "ocid1.user.oc1..aaaaaaaxxxxxxxxx"
api_key_fingerprint = "xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx"
private_key_path    = "~/.oci/oci_api_key.pem"

# --- Region e Compartment ---
region           = "eu-milan-1"
compartment_ocid = "ocid1.tenancy.oc1..aaaaaaaxxxxxxxxx"  # root tenancy se non usi compartment

# --- Compute ---
image_ocid     = "ocid1.image.oc1.eu-milan-1.aaaaaaaxxxxxxxxx"
ssh_public_key = "ssh-rsa AAAA...your-key-here"

