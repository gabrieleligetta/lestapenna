DISCORD_BOT_TOKEN=
DISCORD_SUMMARY_CHANNEL_ID=
DISCORD_COMMAND_AND_RESPONSE_CHANNEL_ID=

# 'openai' per sviluppo, 'ollama' per produzione locale
AI_PROVIDER=openai
OPENAI_API_KEY=sk-proj-....
OPEN_AI_MODEL=gpt-5-mini

# --- CONFIGURAZIONE OLLAMA ---
# Modello da usare (default: llama3.2)
OLLAMA_MODEL=llama3.2

# URL Base per Ollama:
# 1. Mac/Windows (Docker Desktop): Usa http://host.docker.internal:11434/v1
# 2. Linux/Oracle (Ollama in container): Usa http://ollama:11434/v1 (nome del servizio)
# 3. Linux/Oracle (Ollama su host): Usa http://172.17.0.1:11434/v1 (IP gateway docker)
OLLAMA_BASE_URL=http://host.docker.internal:11434/v1

SUMMARY_INTERVAL_MINUTES=1

# Configurazione Oracle Object Storage (S3 Compatible)
OCI_REGION=eu-milan-1
OCI_NAMESPACE=iltuonamespace
OCI_BUCKET_NAME=lestapenna-recordings
OCI_ACCESS_KEY_ID=le_tue_chiavi_customer_secret
OCI_SECRET_ACCESS_KEY=la_tua_secret_key
OCI_ENDPOINT=https://iltuonamespace.compat.objectstorage.eu-milan-1.oraclecloud.com

# Configurazione Email (Porkbun)
SMTP_HOST=smtp.porkbun.com
SMTP_PORT=465
SMTP_USER=unicorn@gligetta.dev
SMTP_PASS=tu_password_della_casella_email
SMTP_FROM_NAME=Lestapenna Bot
REPORT_RECIPIENT=gabligetta@gmail.com
